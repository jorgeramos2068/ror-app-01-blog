<h1 class="text-center">Login</h1>
<div class="row mt-4">
  <div class="col-sm-12">
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group row">
        <%= f.label :email, class: "col-sm-2 col-form-label" %>
        <%= f.email_field :email, class: "form-control col-sm-10", placeholder: "Enter email", autofocus: true %>
      </div>
      <div class="form-group row">
        <%= f.label :password, class: "col-sm-2 col-form-label" %>
        <%= f.password_field :password, class: "form-control col-sm-10", autocomplete: "off" %>
      </div>
      <div class="form-group">
        <%= f.submit "Login", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
