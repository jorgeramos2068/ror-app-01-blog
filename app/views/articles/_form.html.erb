<%= render 'shared/errors', obj: @article %>

<div class="row mt-4">
  <div class="col-sm-12">
    <%= form_with model: @article do |f| %>
      <div class="form-group row">
        <%= f.label :title, class: "col-sm-2 col-form-label" %>
        <%= f.text_field :title, class: "form-control col-sm-10", placeholder: "Title of article", autofocus: true %>
      </div>
      <div class="form-group row">
        <%= f.label :description, class: "col-sm-2 col-form-label" %>
        <%= f.text_area :description, rows: 10, class: "form-control col-sm-10" %>
      </div>
      <div class="form-group row">
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
          <% cb.label(class: "form-check form-check-inline") {cb.check_box(class: "form-check-input") + cb.text} %>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
  <div class="col-sm-4 offset-sm-4">
    [ <%= link_to "Cancel request and return to Articles listing", articles_path %> ]
  </div>
</div>
