<%= render 'shared/errors', obj: @category %>

<div class="row mt-4">
  <div class="col-sm-12">
    <%= form_with model: @category do |f| %>
      <div class="form-group row">
        <%= f.label :name, class: "col-sm-2 col-form-label" %>
        <%= f.text_field :name, class: "form-control col-sm-10", placeholder: "Enter category name", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.submit(@category.new_record? ? "Create category" : "Update category", class: "btn btn-primary btn-lg") %>
      </div>
    <% end %>
  </div>
  <div class="col-sm-4 offset-sm-4">
    [ <%= link_to "Cancel request and return to Categories listing", categories_path %> ]
  </div>
</div>
