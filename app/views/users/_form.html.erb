<%= render 'shared/errors', obj: @user %>

<div class="row mt-4">
  <div class="col-sm-12">
    <%= form_with model: @user do |f| %>
      <div class="form-group row">
        <%= f.label :username, class: "col-sm-2 col-form-label" %>
        <%= f.text_field :username, class: "form-control col-sm-10", placeholder: "Enter username", autofocus: true %>
      </div>
      <div class="form-group row">
        <%= f.label :email, class: "col-sm-2 col-form-label" %>
        <%= f.email_field :email, class: "form-control col-sm-10", placeholder: "Enter email", autofocus: true %>
      </div>
      <div class="form-group row">
        <%= f.label :password, class: "col-sm-2 col-form-label" %>
        <%= f.password_field :password, class: "form-control col-sm-10", placeholder: "Enter password", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.submit(@user.new_record? ? "Signup" : "Update account", class: "btn btn-primary btn-lg") %>
      </div>
    <% end %>
  </div>
  <div class="col-sm-4 offset-sm-4">
    [ <%= link_to "Cancel request and return to Articles listing", articles_path %> ]
  </div>
</div>
